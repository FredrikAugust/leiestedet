// Front page
body, html {
  height: 100%;
}

.full-page-jumbotron {
  height: 100%;

  background-image: url(<%= asset_path('leiestedet_frontpage.jpg') %>);
  background-size: cover;

  display: flex;

  h4 {
    margin-top: 0;
  }

  h5 {
    font-weight: 300;
  }

  .content {
    flex: auto;
    align-self: center;

    * {
      margin: auto;
      display: block;
      color: white;
      text-shadow: 1px 1px black;
    }

    .btn {
      background-color: #546e7a;
      display: block;
    }

    *:not(:last-child) {
      margin-bottom: 10px;
    }
  }
}

// About us
.container#about-us {
  h2 {
    text-align: center;
  }
}

// Navbar
.navbar-fixed {
  position: fixed !important;

  * {
    background: rgba(0,0,0,0) !important;
    box-shadow: none !important;
    text-shadow: 1px 1px black;
  }
}


// Media queries
@media screen and (max-width: 660px) {
  .full-page-jumbotron>.content>* {
    width: 90%;

    &::not('.btn') {
      text-align: left;
    }

    .btn {
      width: 90%;
    }
  }
}

@media screen and (min-width: 660px) {
  .full-page-jumbotron>.content>* {
    width: 40%;
    text-align: center;
  }

  .full-page-jumbotron .btn {
    width: 30%;
    margin: auto;
  }
}
