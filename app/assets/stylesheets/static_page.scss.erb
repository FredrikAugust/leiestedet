// Front page
body, html {
  height: 100%;
}

.full-page-jumbotron {
  height: 100%;
  transition: height ease-in-out 0.5s;

  background-image: url(<%= asset_path('leiestedet_frontpage.jpg') %>);
  background-size: cover;
  background-attachment: fixed;

  display: flex;

  h4 {
    margin-top: 0;
  }

  h5 {
    font-weight: 300;
  }

  .content {
    flex: auto;
    align-self: center;

    * {
      margin: auto;
      display: block;
      color: white;
      transition: text-shadow ease-in-out 0.5s;
    }

    .btn {
      display: block;
      text-shadow: none;
      transition: background ease-in-out 0.3s, color ease-in-out 0.3s;
      border-color: white;
    }

    .btn:hover {
      box-shadow: none;
      background-color: white;
      color: black;
    }

    *:not(:last-child) {
      margin-bottom: 10px;
    }
  }
}

// Navbar
.navbar-fixed {
  position: fixed !important;

  nav {
    background-color: transparent;
    transition: background ease-in-out 0.5s;
    box-shadow: none;
    border-bottom: 0;

    ul a, .brand-logo {
      color: white;
      font-weight: 300;
    }

    .dropdown-content li a {
      color: #212121;
    }
  }

  .dropdown-content * {
    text-shadow: none !important;
  }

  i.material-icons {
    color: white;
  }
}


// Media queries
@media screen and (max-width: 660px) {
  .full-page-jumbotron>.content>* {
    width: 90%;

    &::not('.btn') {
      text-align: left;
    }

    .btn {
      width: 90%;
    }
  }
}

@media screen and (min-width: 660px) {
  .full-page-jumbotron>.content>* {
    width: 40%;
    text-align: center;
  }

  .full-page-jumbotron .btn {
    width: 30%;
    margin: auto;
  }
}
