<h1>Lag en ny annonse</h1>

<%= form_for @listing, url: {action: :create} do |f| %>
  <% if @listing.errors.messages.length > 0 %>
    <div class="errors">
      <%= raw concat_errors @listing.errors.messages %>
    </div>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :description %>
  <%= f.text_area :description, class: 'materialize-textarea' %>

  <%= f.label :listingimages %>
  <div class="file-field input-field">
    <div class="btn">
      <span>Velg bilder</span>
      <input placeholder='Velg Ã©n eller fler bilder' type="file" multiple name='listing[listingimages][]' id='listing_listingimages'>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text">
    </div>
  </div>

  <%= f.submit 'Lag annonse', class: 'btn' %>
<% end %>
