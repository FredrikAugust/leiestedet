<h1><%= @listing.title %></h1>
<div class="chip"><%= @listing.price %>NOK</div>
<p class="small">Opprettet av: <%= link_to full_name(@listing.user), profile_path(id: @listing.user.id) %></p>

<% if @listing.listingimages[0] %>
  <% @listing.listingimages.each do |image| %>
    <%= image_tag image.url, class: 'responsive-img' %>
  <% end %>
<% else %>
  <em>Ingen bilder</em>
<% end %>

<%= render partial: 'shared/map', locals: { place_id: @listing.user.place_id } %>

<h4>Beskrivelse</h4>

<p><%= @listing.description %></p>

<% if @listing.user == current_user %>
  <hr>
  <%= link_to "Slett annonse", listing_path(@listing),
    method: :delete, class: "btn red darken-4" %>
  <%= link_to "Endre annonse", edit_listing_path(@listing), class: 'btn' %>
<% end %>
