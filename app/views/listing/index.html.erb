<div class="section">
  <div class="row">
    <div class="col s12">
      <form method="GET" action='<%= listing_index_path %>'>
        <div class="card-panel">
          <div class="input-field" id='search-div'>
            <i class="material-icons prefix">search</i>
            <input type="text" value="<%= @search_query %>" id='query_string' name='sokeord'>
            <label for="query_string">Søk</label>
          </div>
        </div>
      </form>
    </div>
    <div class="col s12">
      <div class="row">
        <% if @listings.any? %>
          <%= render partial: 'shared/listing', collection: @listings, as: :listing %>
          <%= will_paginate @listings, param_name: :side,
            previous_label: 'Forrige', next_label: 'Neste' %>
        <% else %>
          <div class="listing-placeholder">
            <p class='grey-text'>Ingen annonser matcher ditt søk</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
